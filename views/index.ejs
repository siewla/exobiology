<!doctype html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs') %>
    </head>
    <body>
        <h1 id='heading'>List of All Scientists</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index) => { %>
                    <tr>
                        <td><%=item.name%></td>
                        <td><%=item.description%></td>
                        <td>
                            <form action="/<%=index%>/edit">
                                <input type="submit" value="Edit" class="edit-button">
                            </form>
                            <form action="/<%=index%>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="delete-button">
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <form style = "text-align:right" action="/all?_method=DELETE" method="POST">
            <button type="submit" class="btn waves-effect waves-light delete-all">Delete All</button>
        </form> 
    </body>
</html>