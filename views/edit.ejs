<!doctype html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs') %>
    </head>
    <body>
        <h1 id='heading'>Create New</h1>
        <div class = 'new-form'>
            <form action="/<%=index%>?_method=PUT" method="POST">
                <label for="name" class="input-header">Name</label>
                <input type="text" name="name" value="<%=data.name%>" required="true"/>
                <label for="description" class="input-header">Description</label>
                <input type="text" name="description" value="<%=data.description%>" required="true"/>
                <div style = "text-align:right">
                    <button id ="update-button" type="submit">Update</button>
                </div>
            </form>
        </div>
    </body>
</html>